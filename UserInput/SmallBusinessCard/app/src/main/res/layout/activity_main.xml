<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <ImageView
        android:id="@+id/logo_image_view"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/font_image_view"
        android:src="@drawable/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image_view"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/full_name_image_view"
        android:text="Kahina Mouelouel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/font_image_view"
        android:layout_marginLeft="16dp"
        android:color="?colorPrimaryDark"
        />
    <TextView
        android:id="@+id/position_text_view"
        android:text="Multilingual Translator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/full_name_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:color="?colorPrimaryDark"/>
    <TextView
        android:id="@+id/contact_text_view"
        android:text="Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#4A148C"
        android:layout_below="@id/position_text_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:id="@+id/email_image_view"
        android:src="@drawable/email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/contact_text_view"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/email_text_view"
        android:text="mouelouel@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/contact_text_view"
        android:layout_toRightOf="@id/email_image_view"
        android:layout_marginLeft="60dp"/>
    <ImageView
        android:id="@+id/phone_image_view"
        android:src="@drawable/phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email_image_view"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/phone_text_view"
        android:text="+1(925)705-1175"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/email_text_view"
        android:layout_toRightOf="@id/phone_image_view"
        android:layout_marginLeft="60dp"/>
    <ImageView
        android:id="@+id/address_image_view"
        android:src="@drawable/address"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/phone_text_view"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/address_text_view"
        android:text="Concord,CA 94520."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/phone_text_view"
        android:layout_toRightOf="@id/address_image_view"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:id="@+id/role_text_viewe"
        android:text="description:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#4A148C"
        android:layout_below="@id/address_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/description_text_view"
        android:text="Kaho Translate is a free multilingual machine translation service, to translate text, speech, images, sites, or real-time video from one language into another."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@id/role_text_viewe"
        android:layout_marginLeft="16dp"/>
</RelativeLayout>
